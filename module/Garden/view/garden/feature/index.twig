<table id="tuinplanten-datatables" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="text-align:left;"><span class="gemicon-small-basil"></span><a href="">kenmerk</a></th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
                {% for feature in features %}
            <tr>
                <td class="text_center">{{ feature.getFeature() }}&nbsp;</td>
                <td class="actions">
                    <a class="icon-edit" href="{{url('garden', {'controller':'feature','action':'edit','id':feature.getId()}, {}, 1)}}"></a>
                                {% if feature.getId() not in featuresUsed %}
                    <a class="icon-trash" href="{{url('garden', {'controller':'feature','action':'delete','id':feature.getId()}, {}, 1)}}"></a>
                                {% endif %}
                </td>
            </tr>
                {% endfor %}
        </tbody>
    </table>
