<table id="tuinplanten-datatables" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th ng-click="predicate = 'name'; reverse=!reverse" style="text-align:left;"><span class="gemicon-small-basil"></span><a href="">kenmerk</a></th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="feature in features | orderBy:predicate:reverse">
            <td class="text_center">[[ feature.name ]]&nbsp;</td>
            <td class="actions">
                <!--<a class="icon-edit" href="{{url('garden', {'controller':'feature','action':'edit','id':feature.getId()}, {}, 1)}}"></a> -->
                <button class="icon-edit" ng-click="editFeature(feature.id)"></button>
                <button ng-if="feature.delete" class="icon-trash" ng-click="deleteFeature(feature.id); features.splice($index, 1) "></button>
            </td>
        </tr>
    </tbody>
</table>
<div id="editform"></div>